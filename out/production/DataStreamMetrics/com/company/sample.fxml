<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.company.Controller">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <AnchorPane prefHeight="500.0" prefWidth="650.0">
            <children>
                <ImageView fx:id="background" fitHeight="500.0" fitWidth="650.0" pickOnBounds="true" preserveRatio="true" />
                <TextArea fx:id="textfield" layoutX="14.0" layoutY="15.0" prefHeight="470.0" prefWidth="375.0">
                    <font>
                        <Font name="Segoe UI" size="11.0" />
                    </font></TextArea>
                <Button fx:id="analyze_button" layoutX="409.0" layoutY="239.0" mnemonicParsing="false" onAction="#analyze_action" prefHeight="60.0" prefWidth="220.0" style="-fx-background-color: #b90000; -fx-background-radius: 10;;" text="Analyze" textFill="WHITE" textOverrun="WORD_ELLIPSIS">
                    <font>
                        <Font name="Trebuchet MS Bold" size="25.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Button fx:id="load_button" alignment="CENTER" contentDisplay="CENTER" layoutX="409.0" layoutY="321.0" mnemonicParsing="false" onAction="#load_action" prefHeight="40.0" prefWidth="220.0" style="-fx-background-color: #3d393a; -fx-background-radius: 10;" text="Load" textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font name="Trebuchet MS Bold" size="20.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Button fx:id="clear_button" layoutX="409.0" layoutY="381.0" mnemonicParsing="false" onAction="#clear_action" prefHeight="40.0" prefWidth="220.0" style="-fx-background-color: #3d393a; -fx-background-radius: 10;" text="Clear" textFill="WHITE">
                    <font>
                        <Font name="Trebuchet MS Bold" size="20.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Button fx:id="about_button" layoutX="410.0" layoutY="441.0" mnemonicParsing="false" onAction="#about_action" prefHeight="40.0" prefWidth="220.0" style="-fx-background-color: #3d393a; -fx-background-radius: 10;" text="About" textFill="WHITE">
                    <font>
                        <Font name="Trebuchet MS Bold" size="20.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
            </children>
        </AnchorPane>
    </children>
</GridPane>
